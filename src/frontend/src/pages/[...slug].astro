---
import Layout from '../layouts/Layout.astro';

const { slug } = Astro.params;

const data = await fetch(import.meta.env.API_BASE_PATH + "specificeBook?path=/" + slug); // must add / before slug as params strips the first /
const bookData = await data.json();
---

<Layout title={bookData.name}>
  <main>

<div class="flow-root">
  <dl class="-my-3 divide-y divide-gray-100 text-sm">
    <div class="grid grid-cols-1 gap-1 py-3 sm:grid-cols-3 sm:gap-4">
      <dt class="font-medium text-gray-900">Title</dt>
      <dd class="text-gray-700 sm:col-span-2">{bookData.name}</dd>
    </div>

    <div class="grid grid-cols-1 gap-1 py-3 sm:grid-cols-3 sm:gap-4">
      <dt class="font-medium text-gray-900">Size</dt>
      <dd class="text-gray-700 sm:col-span-2">{bookData.size}</dd>
    </div>

    <div class="grid grid-cols-1 gap-1 py-3 sm:grid-cols-3 sm:gap-4">
      <dt class="font-medium text-gray-900">Last modified date</dt>
      <dd class="text-gray-700 sm:col-span-2">{bookData.lastModified}</dd>
    </div>

